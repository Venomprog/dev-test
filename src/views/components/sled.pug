    section.sled 
        .container 
            .sled__wrapper 
                .sled__row 
                    .title.sled__title Углеродный след CO <sub> 2 </sub>  за 2022 год
                .sled__row.sled__row-main
                    .sled__bg 
                        .sled-img.sled-img--tree
                            +picture(src = 'tree')
                        .sled-img.sled-img--circle
                            +picture(src = 'circle')
                    .transportation.transportation--absolute.train
                        .transportation-img
                            +train-svg.train
                        .transportation-text 
                            .transportation-title Железнодорожные перевозки
